@model CreateMessageViewModel

@{
    ViewBag.Title = "Send Message";
}
@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<div class="col-md-6 col-md-offset-3">
    <div class="well">
        <form method="post">
            <div class="validation" asp-validation-summary="ModelOnly"></div>


            <div class="form-group">
                <label asp-for="Receiver">User:</label>
                <input type="email" asp-for="Receiver" class="form-control" />
                <span class="text-danger" asp-validation-for="Receiver"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject">Subject:</label>
                <input type="text" asp-for="Subject" class="form-control" />
                <span class="text-danger" asp-validation-for="Subject"></span>
            </div>
            <div class="form-group">
                <label asp-for="MessageItem">Message:</label>
                <textarea rows="4" asp-for="MessageItem" class="form-control"></textarea>
                <span class="text-danger" asp-validation-for="MessageItem"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-envelope"></i> Send Message</button>
                
            </div>
        </form>
    </div>
</div>